<%- layout('./layouts/boilerplate') -%>

<style>
    .hotel-card {
        border: 0;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    .hotel-card:hover {
        transform: scale(1.02);
    }

    .hotel-card img {
        border-radius: 10px 10px 0 0;
        height: 250px; /* Consistent height */
        object-fit: cover;
    }

    .hotel-card-body {
        padding: 20px;
    }

    .hotel-card-title {
        color: #333;
        font-weight: 600;
    }

    .hotel-card-description {
        color: #999;
        line-height: 1.5;
    }

    .hotel-card-details {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        color: #aaa;
    }

    .hotel-card-details span:first-child {
        font-weight: bold;
    }

    .hotel-card-details a {
        background-color: #33b5e5;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

    .hotel-card-details a:hover {
        background-color: #2e9ebe;
    }
</style>

<div class="container my-4">
    <h1 class="text-center mb-4 display-4">Explore Luxurious Stays</h1>
    <div class="row">
        <% hotels.forEach(function(hotel) { %>
            <div class="col-md-4 mb-4">
                <div class="card hotel-card shadow-sm border-light">
                    <img src="<%= hotel.image %>" class="card-img-top" alt="<%= hotel.title %>">
                    <div class="card-body hotel-card-body">
                        <h5 class="hotel-card-title"><%= hotel.title %></h5>
                        <p class="hotel-card-description"><%= hotel.description %></p>
                        <div class="hotel-card-details">
                            <span>Location: <%= hotel.location %></span>
                            <span>Country: <%= hotel.country %></span>
                        </div>
                        <div class="hotel-card-details">
                            <span class="font-weight-bold">Price: $<%= hotel.price %></span>
                            <a href="/hotels/<%= hotel._id %>">Show Details</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EQBeqOJ8HkGBqxhhHQz5jICICW+Rqo2WLHsZ6x4pExj1HxbNJJvwZRUv9w" crossorigin="anonymous"></script>
