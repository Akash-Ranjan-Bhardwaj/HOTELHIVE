<%- layout('./layouts/boilerplate') -%>

<div class="container my-5">
    <h1 class="text-center mb-4">Login</h1>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4 border-0 rounded">
                <form action="/auth/users/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control rounded-pill" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control rounded-pill" name="password" required>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary w-100 me-2 rounded-pill py-2">Login</button>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary w-100 rounded-pill py-2 back-btn">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
  .back-btn {
    background-color: transparent;
    color: black;
    border-color: #6c757d; /* Default secondary color border */
  }

  .back-btn:hover {
    background-color: #6c757d; /* Secondary color on hover */
    color: white; /* Text color change on hover */
  }
</style>
